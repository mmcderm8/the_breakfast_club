<div class="small-6 small-centered columns">
  <%= form_for [@dish, @review] do |f| %>
    <li>
      <%= f.label :rating %>
      <%= f.text_field :rating %>
    </li>
    <li>
      <%= f.label :body, "Comments" %>
      <%= f.text_field :body %>
    </li>
    <li>
      <%= f.submit "Review #{@dish.name}", class: "hollow button" %>
    </li>
  <% end %>
</div>
