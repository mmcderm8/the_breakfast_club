<h1><%= @dish.name %></h1>

<p>Description: <%= @dish.description %></p>
<p>Created by: <%= @dish.creator.username %></p>

<ul style="list-style: none;">
  <% @reviews.each do |review| %>
  <div class='review'>
          Rating: <%= review.rating %>
          <p class="review-description">
            Description: <%= review.body %>
          </p>
          <br />
          <p id='voting-number' class="total-votes-<%= review.id %>"><%= review.sum_votes %></p>
            <%= button_to "Likey", review_votes_path(review, value: 1), id: 'upvote', data: { dishid: "#{@dish.id}", reviewid: "#{review.id}" } %>
            <%= button_to "Dislikey", review_votes_path(review, value: -1), id: 'downvote', data: { dishid: "#{@dish.id}", reviewid: "#{review.id}" } %>
          </div>
  <% end %>
</ul>

<%= link_to "Review this Dish", new_dish_review_path(@dish) %>
