<% if current_user && current_user.admin? %>
  <div>
    <ul style="list-style: none;">
      <% @users.each do |user| %>
        <li>
          <%= user.username %>
          <%= link_to "Delete #{user.username}'s Account", admin_user_path(user), method: :delete %>
        </li>
      <% end %>
    </ul>
  </div>
<% end %>
