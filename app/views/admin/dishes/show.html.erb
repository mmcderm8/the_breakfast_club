<h1><%= @dish.name %></h1>

<p>Description: <%= @dish.description %></p>
<p>Created by: <%= @dish.creator.username %></p>

<ul style="list-style: none;">
  <% @reviews.each do |review| %>
    <li>
      Rating: <%= review.rating %> (<%= review.reviewer.username %>) <%= review.body %>
      <p id='voting-number' class="total-votes-<%= review.id %>"><%= review.sum_votes %></p>
      <%= link_to "Delete this Review", admin_dish_review_path(@dish, review), method: :delete %>
    </li>
  <% end %>
</ul>

<%= link_to "Delete this Dish", admin_dish_path(@dish), method: :delete %>
